{
    // Use o IntelliSense para saber mais sobre os atributos possíveis.
    // Focalizar para exibir as descrições dos atributos existentes.
    // Para obter mais informações, acesse: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
          "type": "node",
          // attach = tenta conectar o debug na aplicação que está rodando
          // launch = roda a aplicação e faz o debug
          "request": "attach",
          // inspector = para inspecionar o NodeJS
          "protocol": "inspector",
          "restart": true,
          "name": "Debug Node",
          "skipFiles": [
              "<node_internals>/**"
          ],
          "outFiles": [
              "${workspaceFolder}/**/*.js"
          ]
      }
    ]
}
